{{#with car}}
    <h1>{{name}}</h1>
    <img class="cube"
         src="/static/images/{{imageUrl}}">
    <div class="details">
        <p><span>Description:</span> {{description}}</p>
        <p><span>Difficulty level:</span> {{price}}</p>
        <a class="btn" href="/">Back</a>
        {{#if isOwner}}
            <a class="btn" href="/delete/{{id}}">Delete</a>
            <a class="btn" href="/attach/{{id}}">Attach Accessory</a>
            <a class="btn" href="/edit/{{id}}">Edit</a>
        {{/if}}
    </div>

    <h2>Accessories</h2>
    <div class="accessories">
        {{#each accessories}}
            {{> accessory}}
        {{else}}
            <h3 class="italic">This cube has no accessories yet...</h3>
        {{/each}}
    </div>

{{/with}}

